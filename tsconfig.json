{
  "compilerOptions": {
    "lib": ["ES2015", "DOM"],
    "target": "ES5",
    "declaration": true,
    "module": "commonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src", "test", "typings.d.ts"],
  "exclude": ["dist"]
}
